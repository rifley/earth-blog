<div class="panel panel-default">
  <div class="panel-heading">{{comment.author}} <span class="pull-right">{{comment.date}}</span></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        {{comment.commentContent}}
      </div>
      <div class="col-md-6">
        <span class="pull-right">{{comment-update comment=comment updateComment="updateComment"}}</span>
      </div>
    </div>

  </div>
  <div class="panel-footer"><button class="btn btn-danger" {{action 'delete' comment}}>Delete</button>  </div>

</div>
