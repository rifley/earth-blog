{{#if updatePostShowing}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=post.author class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=post.title class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date" placeholder=post.date class="form-control"}}
    </div>

    <div class="form-group">
      <label for="snippet">Write a brief bit</label>
      {{input value=snippet id="snippet" placeholder=post.snippet class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Body content</label>
      {{input value=content id="content" placeholder=post.content class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Img link</label>
      {{input value=image id="image" placeholder=post.image}}
    </div>

    <button{{action 'update' post}} class="btn btn-success">Save</button>
  </form>
{{else}}
<button class="btn btn-success" {{action 'updatePostShow'}}>Update Post</button>
{{/if}}
