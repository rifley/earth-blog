{{#if updateCommentShowing}}
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{input value=author id="author" required="required" placeholder=comment.author}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date" placeholder=comment.date}}
    </div>


    <div class="form-group">
      <label for="commentContent">Comment</label>
      {{input value=commentContent id="commentContent" placeholder=comment.commentContent}}
    </div>

    <button{{action 'updateComment' comment}} class="btn btn-success">Submit Changes</button>
  </form>
{{else}}
<button class="btn btn-success" {{action 'updateCommentShow'}}>Edit</button>
{{/if}}
