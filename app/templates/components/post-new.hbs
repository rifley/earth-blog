{{#if newPostShowing}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" required="required" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="snippet">Write a brief bit</label>
      {{input value=snippet id="snippet" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Body content</label>
      {{input value=content id="content" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Img link</label>
      {{input value=image id="image"  class="form-control"}}
    </div>

    <button class="btn btn-success" {{action 'savePost'}}>Save</button>
  </form>
{{else}}
<button class="btn btn-success" {{action 'newPostShow'}}>Add a new post</button>
{{/if}}
