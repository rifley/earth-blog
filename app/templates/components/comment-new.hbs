{{#if addNewComment}}
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{input value=author id="author" required="required" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date" class="form-control"}}
    </div>


    <div class="form-group">
      <label for="commentContent">Comment</label>
      {{input value=commentContent id="commentContent" class="form-control"}}
    </div>

    <button class="btn btn-success" {{action 'saveComment'}}>Save</button>
  </form>
{{else}}
<button class="btn btn-success" {{action 'commentFormShow'}}>Add a new Comment</button>
{{/if}}
