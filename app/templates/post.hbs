<h1>{{model.title}}</h1>
<h3>By {{model.author}}</h3>
<img src={{model.image}} alt={{model.title}} width="100%">
<p>
  {{model.date}}
</p>
<p>
  {{model.content}}
</p>
<button {{action 'delete' model}} class="btn btn-warning">Delete</button>
{{post-update post=model update="update"}}

{{#each model.comments as |comment|}}
  {{comment-tile comment=comment destroyComment="destroyComment"}}
{{/each}}


{{comment-new saveComment="saveComment" post=model}}
